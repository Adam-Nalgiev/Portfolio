<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.home.HomeFragment">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/search_bar"
        style="@style/Theme.MaterialComponents.DayNight.NoActionBar.TextInputLayoutCustomStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:animateLayoutChanges="true"
        android:hint="@string/search_request"
        app:endIconDrawable="@drawable/icon_search"
        app:endIconMode="custom"
        app:endIconTint="@color/black"
        app:hintTextColor="@color/black"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/search_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:inputType="textAutoCorrect"
            android:maxLength="30"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:visibility="gone" />

    </com.google.android.material.textfield.TextInputLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="60dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/new_text"
                style="@style/TextAppearance.AppCompat.BasicTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@string/the_new"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/today_in_top_text"
                style="@style/TextAppearance.AppCompat.BasicTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/today_in_top"
                app:layout_constraintStart_toStartOf="@+id/new_text"
                app:layout_constraintTop_toBottomOf="@+id/new_text" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/top_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:contentDescription="@string/top_image_description"
                app:layout_constraintTop_toBottomOf="@+id/today_in_top_text" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/profile_image"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="16dp"
                android:contentDescription="@string/profile_image_description"
                app:layout_constraintBottom_toBottomOf="@id/top_image"
                app:layout_constraintStart_toStartOf="@id/top_image" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/username"
                style="@style/TextAppearance.AppCompat.SmallTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/roboto"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@id/profile_image"
                app:layout_constraintTop_toTopOf="@id/profile_image" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/profile_image"
                app:layout_constraintStart_toStartOf="@+id/username"
                app:layout_constraintTop_toBottomOf="@+id/username" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/like_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="16dp"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:contentDescription="@string/like_image_button_description"
                app:layout_constraintBottom_toBottomOf="@id/top_image"
                app:layout_constraintEnd_toEndOf="@id/top_image" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/likes_count_text"
                style="@style/TextAppearance.AppCompat.SmallTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:layout_constraintBottom_toBottomOf="@id/like_button"
                app:layout_constraintEnd_toStartOf="@id/like_button"
                app:layout_constraintTop_toTopOf="@id/like_button" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_home_photos"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:layout_constraintTop_toBottomOf="@id/top_image"
                app:spanCount="2" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>